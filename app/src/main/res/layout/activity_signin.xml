<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/header_bg" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/icon1" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Signup with Delivrini"
                android:textSize="30sp" />


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/lightcolor"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:text="Full Name"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/input_Username"
                android:layout_width="302dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:hint="username"
                android:maxLength="20"
                android:textColorHighlight="@color/lightcolor"
                android:textColorHint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="E-mail"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/input_Email"
                android:layout_width="302dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:hint="thisisme@gmail.com"
                android:inputType="textEmailAddress"
                android:textColorHighlight="@color/lightcolor"
                android:textColorHint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="Password"
                android:textSize="15sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_text_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/input_Password"
                    android:layout_width="302dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:textColorHighlight="@color/lightcolor"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="I Am"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/userType"
                android:layout_width="302dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:drawSelectorOnTop="true"
                android:entries="@array/spiner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="Phone Number"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/input_Phone"
                android:layout_width="302dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:hint="20202020"
                android:inputType="phone"
                android:maxLength="8"
                android:textColorHighlight="@color/lightcolor"
                android:textColorHint="@color/white" />


            <android.widget.Button
                android:id="@+id/signup"
                android:layout_width="302dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                style="@style/MyDarkButton"
                android:text="Sign Up" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="5dp"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="already_with_us"
                    android:textColor="@color/lightcolor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Already with Us?"
                    android:textColor="@color/lightcolor"
                    android:textIsSelectable="true"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>